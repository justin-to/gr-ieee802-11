<?xml version="1.0"?>

<block>
	<name>WiFi Frame Equalizer</name>
	<key>ieee802_11_baofdm_frame_equalizer</key>
	<category>[BA_OFDM_IEEE802.11]</category>
	<import>import ieee802_11_baofdm</import>
	<make>ieee802_11_baofdm.frame_equalizer($algo, $freq, $bw, $log, $debug, $num_subcarriers, $num_data_subcarriers, $num_pilots, $occupied_carriers)</make>
	<callback>set_algorithm($algo)</callback>
	<callback>set_frequency($freq)</callback>
	<callback>set_bandwidth($bw)</callback>

	<param>
		<name>Algorithm</name>
		<key>algo</key>
		<value>ieee802_11_baofdm.LS</value>
		<type>int</type>

		<option>
			<name>LS</name>
			<key>ieee802_11_baofdm.LS</key>
		</option>
		<option>
			<name>LMS</name>
			<key>ieee802_11_baofdm.LMS</key>
		</option>
		<option>
			<name>Comb</name>
			<key>ieee802_11_baofdm.COMB</key>
		</option>
		<option>
			<name>STA</name>
			<key>ieee802_11_baofdm.STA</key>
		</option>
	</param>

	<param>
		<name>Frequency</name>
		<key>freq</key>
		<value>5.89e9</value>
		<type>real</type>
	</param>

	<param>
		<name>Bandwidth</name>
		<key>bw</key>
		<value>10e6</value>
		<type>real</type>
	</param>

	<param>
		<name>Log</name>
		<key>log</key>
		<value>False</value>
		<type>bool</type>

		<option>
			<name>Enable</name>
			<key>True</key>
		</option>
		<option>
			<name>Disable</name>
			<key>False</key>
		</option>
	</param>

	<param>
		<name>Debug</name>
		<key>debug</key>
		<value>False</value>
		<type>bool</type>

		<option>
			<name>Enable</name>
			<key>True</key>
		</option>
		<option>
			<name>Disable</name>
			<key>False</key>
		</option>
	</param>
	
	<param>
		<name>Num Subs</name>
		<key>num_subcarriers</key>
		<type>int</type>
	</param>
	
	<param>
		<name>Num Data Subs</name>
		<key>num_data_subcarriers</key>
		<type>int</type>
	</param>
	
	<param>
		<name>Num Pilots</name>
		<key>num_pilots</key>
		<type>int</type>
	</param>

	<param>
    <name>Occupied Carriers</name>
    <key>occupied_carriers</key>
    <type>raw</type>
	</param>

	<sink>
		<name>in</name>
		<type>complex</type>
		<vlen>64</vlen>
		<nports>1</nports>
	</sink>

	<source>
		<name>out</name>
		<type>byte</type>
		<vlen>48</vlen>
		<nports>1</nports>
	</source>

	<source>
		<name>symbols</name>
		<type>message</type>
        <optional>1</optional>
	</source>

</block>


